@model IEnumerable<OnlineStoreProject.Models.OrderViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Orders</h2>
<div id="orders_list">
@if(Model.Count() == 0)
{
    <p>No orders yet</p>
}
@foreach(OnlineStoreProject.Models.OrderViewModel order in Model)
{
    <div class="order" data-attr="@order.OrderId">
        <div class="order_data">
            <p class="order_name">Order #@order.OrderId<p>
            <p class="order_date">Order made at: @order.CreatedAt<p>
            <p class="order_sum">Order price: $@order.Sum</p>
            @if(order.Username != null)
            {
                <p class="purchaser">Purchaser: @order.Username</p>
            }
            <input type="hidden" class="order_id" value="@order.OrderId">
            <div class="delete_order btn" id="delete_order">
                <i class="glyphicon glyphicon-remove"></i>
            </div>
        </div>
        <div class="order_details"></div>
    </div>
}
</div>
@Scripts.Render("~/bundles/orders")



